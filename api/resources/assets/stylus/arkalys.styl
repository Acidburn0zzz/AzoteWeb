@import "bootstrap";

@import "utils/fonts";

.nav-profile-photo {
    border: 2px solid #d3e0e9;
    border-radius: 50%;
    padding: 2px;
    height: 50px;
    width: 50px;
}

body {
    background-color: #f1f1f1;
    font-family: "montserratlight";
}

a {
    text-decoration: none;
}

b {
    font-family: "montserratbold" !important;
    font-weight: normal !important;
}

.navbar {
    background-color: #fff;
}

.panel {
    border-radius: 0px;
    border: none;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);

    &.panel-default {
        .panel-heading {
            background-color: #fff;
            color: #2aafdc;
        }

        .panel-body {
            color: #797979;

            a {
                color: #2aafdc;
            }
        }
    }

    &.panel-primary {
        .panel-body {
            p {
                color: #fff;
            }
        }
    }

    &.panel-primary, &.panel-primary .panel-heading {
        background-color: #2aafdc;
    }

    .panel-heading {
        font-size: 16px;
        text-transform: uppercase;
        border: none;
        font-family: "montserratbold";
        padding-top: 20px;
    }

    .panel-body {
        a {
            //font-weight: bold;

            &:hover {
                text-decoration: none;
            }
        }
    }
}

.form-group {
    &:last-child {
        margin-bottom: 0;
    }
}

.input-group {
    .input-group-addon, .form-control {
        border-radius: 0px;
    }

    .input-group-addon {
        padding: 20px;
    }

    .input-lg {
        height: 60px;
    }

    .form-control {
        background-color: #eee;
        border-left: none;
    }
}

.btn {
    &.btn-primary {
        background-color: #2aafdc;
        border-radius: 0px;
        border: none;
        padding: 20px;
        text-transform: uppercase;
    }
}
